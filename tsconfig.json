{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["es2017", "DOM", "scripthost"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
  },
  "include": [
    "./src"]
}
